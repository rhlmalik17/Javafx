<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.web.WebView?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" fx:id="gridPane" alignment="center" hgap="10" vgap="10" stylesheets="@styles.css">
    <Button text="Open..." onAction="#handleClick" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <Button text="Button 2" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Button text="Button 3" GridPane.rowIndex="0" id="myButton" GridPane.columnIndex="2"/>
    <Button text="Button 4" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
    <Button text="Button 5" GridPane.rowIndex="0" GridPane.columnIndex="4"/>

    <Hyperlink text="www.google.com" GridPane.rowIndex="1" GridPane.columnIndex="0" onAction="#handleLinkClick"/>

    <WebView GridPane.columnIndex="0" fx:id="webView" GridPane.rowIndex="2" GridPane.columnSpan="4" GridPane.rowSpan="5"/>


</GridPane>